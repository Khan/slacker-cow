{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"XXX-REPLACE-WITH-NEW-VERSION-XXX",
      "labels":{
         "name":"frontend"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"XXX-REPLACE-WITH-NEW-VERSION-XXX"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"XXX-REPLACE-WITH-NEW-VERSION-XXX"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"slacker-cow",
                  "image":"gcr.io/slacker-cow/hubot:latest",
                  "ports":[
                     {
                        "containerPort":8080,
                        "protocol":"TCP"
                     }
                   ],
                   "env":[{
                     "name":"HUBOT_SLACK_TOKEN",
                     "value":"XXX-REPLACE-WITH-SLACK-TOKEN-XXX"
                   },
                   {
                     "name":"JENKINS_DEPLOY_TOKEN",
                     "value":"XXX-REPLACE-WITH-JENKINS-DEPLOY-TOKEN-XXX"
                   },
                   {
                     "name":"JENKINS_API_TOKEN",
                     "value":"XXX-REPLACE-WITH-JENKINS-API-TOKEN-XXX"
                   },
                   {
                     "name":"HUBOT_ADAPTER",
                     "value":"slack"
                   },
                   {
                     "name":"HUBOT_NAME",
                     "value":"slacker-cow"
                   },
                   {
                     "name":"REDIS_URL",
                     "value":"redis://redis-master"
                   },
                   {
                     "name":"DEPLOY_ROOM",
                     "value": "1s-and-0s-deploys"
                   }]
               }
            ]
         }
      }
   }
}
